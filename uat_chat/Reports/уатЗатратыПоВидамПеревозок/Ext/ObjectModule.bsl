	|	НАЧАЛОПЕРИОДА(уатЗатратыПоВидамПеревозок.Период, ДЕНЬ) КАК ПериодДень,
	|	НАЧАЛОПЕРИОДА(уатЗатратыПоВидамПеревозок.Период, НЕДЕЛЯ) КАК ПериодНеделя,
	|	НАЧАЛОПЕРИОДА(уатЗатратыПоВидамПеревозок.Период, ДЕКАДА) КАК ПериодДекада,
	|	НАЧАЛОПЕРИОДА(уатЗатратыПоВидамПеревозок.Период, МЕСЯЦ) КАК ПериодМесяц,
	|	НАЧАЛОПЕРИОДА(уатЗатратыПоВидамПеревозок.Период, КВАРТАЛ) КАК ПериодКвартал,
	|	НАЧАЛОПЕРИОДА(уатЗатратыПоВидамПеревозок.Период, ПОЛУГОДИЕ) КАК ПериодПолугодие,
	|	НАЧАЛОПЕРИОДА(уатЗатратыПоВидамПеревозок.Период, ГОД) КАК ПериодГод,
	|	уатЗатратыПоВидамПеревозок.Регистратор КАК Регистратор,
	|	уатЗатратыПоВидамПеревозок.ВидПеревозки КАК ВидПеревозки,
	|	уатЗатратыПоВидамПеревозок.СтатьяЗатрат КАК СтатьяЗатрат,
	|	уатЗатратыПоВидамПеревозок.СуммаОборот КАК СуммаОборот
	|{ВЫБРАТЬ
	|	Период,
	|	ПериодДень,
	|	ПериодНеделя,
	|	ПериодДекада,
	|	ПериодМесяц,
	|	ПериодКвартал,
	|	ПериодПолугодие,
	|	ПериодГод,
	|	Регистратор.*,
	|	ВидПеревозки.*,
	|	СтатьяЗатрат.*,
	|	СуммаОборот}
	|ИЗ
	|	РегистрНакопления.уатЗатратыПоВидамПеревозок.Обороты(&ДатаНач, &ДатаКон, Регистратор) КАК уатЗатратыПоВидамПеревозок
	|{ГДЕ
	|	уатЗатратыПоВидамПеревозок.Период,
	|	(НАЧАЛОПЕРИОДА(уатЗатратыПоВидамПеревозок.Период, ДЕНЬ)) КАК ПериодДень,
	|	(НАЧАЛОПЕРИОДА(уатЗатратыПоВидамПеревозок.Период, НЕДЕЛЯ)) КАК ПериодНеделя,
	|	(НАЧАЛОПЕРИОДА(уатЗатратыПоВидамПеревозок.Период, ДЕКАДА)) КАК ПериодДекада,
	|	(НАЧАЛОПЕРИОДА(уатЗатратыПоВидамПеревозок.Период, МЕСЯЦ)) КАК ПериодМесяц,
	|	(НАЧАЛОПЕРИОДА(уатЗатратыПоВидамПеревозок.Период, КВАРТАЛ)) КАК ПериодКвартал,
	|	(НАЧАЛОПЕРИОДА(уатЗатратыПоВидамПеревозок.Период, ПОЛУГОДИЕ)) КАК ПериодПолугодие,
	|	(НАЧАЛОПЕРИОДА(уатЗатратыПоВидамПеревозок.Период, ГОД)) КАК ПериодГод,
	|	уатЗатратыПоВидамПеревозок.Регистратор.*,
	|	уатЗатратыПоВидамПеревозок.ВидПеревозки.*,
	|	уатЗатратыПоВидамПеревозок.СтатьяЗатрат.*,
	|	уатЗатратыПоВидамПеревозок.СуммаОборот}
	|{УПОРЯДОЧИТЬ ПО
	|	Период,
	|	ПериодДень,
	|	ПериодНеделя,
	|	ПериодДекада,
	|	ПериодМесяц,
	|	ПериодКвартал,
	|	ПериодПолугодие,
	|	ПериодГод,
	|	Регистратор.*,
	|	ВидПеревозки.*,
	|	СтатьяЗатрат.*,
	|	СуммаОборот}
	|ИТОГИ
	|	СУММА(СуммаОборот)
	|ПО
	|	ВидПеревозки,
	|	СтатьяЗатрат
	|{ИТОГИ ПО
	|	Период,
	|	ПериодДень,
	|	ПериодНеделя,
	|	ПериодДекада,
	|	ПериодМесяц,
	|	ПериодКвартал,
	|	ПериодПолугодие,
	|	ПериодГод,
	|	Регистратор.*,
	|	ВидПеревозки.*,
	|	СтатьяЗатрат.*}";
		
